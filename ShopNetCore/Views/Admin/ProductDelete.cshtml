@model Product
@{
   ViewData["Title"] = "Ürün Silme";
   Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
   <div class="col-md-2"></div>
   <div class="col-md-8">
      <!-- BEGIN SAMPLE TABLE PORTLET-->
      <div class="portlet box red">
         <div class="portlet-body">
            <div class="table-scrollable">
               <table class="table table-dark table-hover">
                  <thead>
                     <tr style="background-color:gray;color:white;">
                        <th>
                           @Html.DisplayFor(model => model.ProductID)
                        </th>
                        <th>
                           @Html.DisplayFor(model => model.ProductName)
                        </th>
                        <th>
                           @string.Format("{0:#,##0.00}",Model.UnitPrice) TL
                        </th>
                        <th>
                           @Html.DisplayFor(model => model.Active)
                        </th>

                     </tr>
                  </thead>
               </table>

               <form asp-action="ProductDelete" method="post">

                  <input type="hidden" asp-for="ProductID" />
                  <input type="submit" value="Sil" class="btn btn-danger" onclick="return confirm('Silmek İstediğinizden emin misiniz?')" />
                  <a asp-action="ProductIndex" class="btn btn-success">Ürün Listesi</a>
               </form>
            </div>
         </div>
      </div>
      <!-- END SAMPLE TABLE PORTLET-->
   </div>
</div>

