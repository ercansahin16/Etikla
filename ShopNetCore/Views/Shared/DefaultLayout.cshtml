  @RenderSection("Scripts", required: false)
  <script>
    $(document).on('click', '.add-to-cart', function () {
      var productId = $(this).data('product-id');
      if (productId != null) {
        $.ajax({
          url: '/Home/AddToCart',
          type: 'POST',
          data: { id: productId },
          success: function (response) {
            if (response.success) {
              $('#cart-summary-container').load('/Home/CartSummary');


              toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "1000",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
              }
              if (response.message == "Ürün Sepetinize Eklendi") {

                toastr.success('Ürün Sepetinize Eklendi', 'Eticaret');
              }
              else {
                toastr.warning('Sepetinizde zaten var', 'Eticaret');
              }


              // $('#cart-notification').addClass('show').removeClass('hide');
              // setTimeout(function () {

              //   $('#cart-notification').addClass('hide').removeClass('show');

              // }, 3000);

              $('#cart-notification').text(response.message);
            }
          },
          error: function () {
            alert("Ürün Sepete Eklenirken bir sorun oluştu");
          }
        });
      }

    });
  </script>
